{
  "manifest_version": 3,
  "name": "Headline Odds",
  "version": "1.0.0",
  "description": "Shows real-time Kalshi prediction market odds next to news headlines",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.elections.kalshi.com/*",
    "https://api.kalshi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  }
}
