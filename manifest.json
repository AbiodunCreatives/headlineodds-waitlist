{
  "manifest_version": 3,
  "name": "Headline Odds",
  "version": "1.0.0",
  "description": "Shows real-time Kalshi prediction market odds next to news headlines",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.elections.kalshi.com/*",
    "https://api.kalshi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.nytimes.com/*",
        "https://*.bbc.com/*",
        "https://*.cnn.com/*",
        "https://*.foxnews.com/*",
        "https://*.reuters.com/*",
        "https://*.apnews.com/*",
        "https://*.theguardian.com/*",
        "https://*.bloomberg.com/*",
        "https://*.cnbc.com/*",
        "https://*.wsj.com/*",
        "https://*.politico.com/*",
        "https://*.axios.com/*",
        "https://*.washingtonpost.com/*",
        "https://*.nbcnews.com/*",
        "https://*.abcnews.go.com/*",
        "https://news.google.com/*",
        "https://*.yahoo.com/*",
        "https://*.medium.com/*",
        "https://*.substack.com/*",
        "https://*.wordpress.com/*",
        "https://*.blogspot.com/*",
        "https://*.coindesk.com/*",
        "https://*.cointelegraph.com/*",
        "https://*.decrypt.co/*",
        "https://*.theblock.co/*",
        "https://*.beincrypto.com/*",
        "https://*.cryptoslate.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  }
}
